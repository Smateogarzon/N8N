FROM n8nio/n8n:1.106.3

# Copia el script y asegura permisos + fin de línea UNIX
COPY startup.sh /usr/local/bin/startup.sh
RUN sed -i 's/\r$//' /usr/local/bin/startup.sh && chmod 0755 /usr/local/bin/startup.sh

# Importante: invocar explícitamente con /bin/sh
ENTRYPOINT ["/bin/sh", "/usr/local/bin/startup.sh"]

EXPOSE 8080
